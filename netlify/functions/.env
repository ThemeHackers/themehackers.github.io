


NODE_ENV=production
ENABLE_SECURITY_LOGGING=true

MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=1800000
CSRF_TOKEN_EXPIRY=3600000

RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_MAX_LOGIN_ATTEMPTS=3
RATE_LIMIT_LOCKOUT_DURATION=900000



NETLIFY_FUNCTIONS_URL=https://dashsecurity.netlify.app/.netlify/functions


JWT_SECRET=th-dashsecurity-jwt-secret-2025-production-secure-key
JWT_REFRESH_SECRET=th-dashsecurity-refresh-secret-2025-production-secure-key


DEBUG=false
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=false


CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' https://www.gstatic.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com"
CSP_STYLE_SRC="'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' https://cdnjs.cloudflare.com"
CSP_CONNECT_SRC="'self' https://www.googleapis.com https://identitytoolkit.googleapis.com https://firestore.googleapis.com https://firebase.googleapis.com https://securetoken.googleapis.com"


CUSTOM_DOMAIN=dashsecurity.netlify.app
FORCE_HTTPS=true

FIREBASE_AUTHORIZED_DOMAINS=dashsecurity.netlify.app,localhost,127.0.0.1


ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30


CACHE_CONTROL_MAX_AGE=31536000
CACHE_CONTROL_IMMUTABLE=true

ENABLE_GZIP=true
ENABLE_BROTLI=true

CDN_ENABLED=true
CDN_CACHE_HEADERS=true


ENABLE_SECURITY_MONITORING=true
ENABLE_THREAT_DETECTION=true
ENABLE_ANOMALY_DETECTION=true

LOG_LEVEL=info
LOG_SECURITY_EVENTS=true
LOG_AUTHENTICATION_EVENTS=true
LOG_RATE_LIMIT_EVENTS=true

